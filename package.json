{
  "name": "hisab-ghar",
  "version": "5.1.0",
  "description": "Hisab Ghar Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\" \"wait-on http://localhost:3000 http://localhost:5173 && electron .\"",
    "build": "npm run frontend:build && npm run backend:build",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "node update-version.js && cd frontend && npm run build",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm install --production",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.hisabghar.desktop",
    "productName": "Hisab Ghar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/dist/**/*",
      "scripts/**/*",
      "setup-database.bat",
      "!backend/node_modules/.cache",
      "!backend/prisma/migrations",
      "!backend/.env",
      "!backend/prisma/inventory.db"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "frontend/dist",
        "to": "frontend/dist"
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "publisherName": "Hisab Ghar",
      "verifyUpdateCodeSignature": false,
      "artifactName": "Hisab-Ghar-Setup-${version}.${ext}",
      "executableName": "HisabGhar"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "include": "installer.nsh",
      "differentialPackage": false
    },
    "publish": {
      "provider": "github",
      "owner": "fareedjaved203",
      "repo": "inventory-desktop"
    }
  },
  "author": "Hisab Ghar",
  "repository": {
    "type": "git",
    "url": "https://github.com/fareedjaved203/inventory-desktop.git"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}